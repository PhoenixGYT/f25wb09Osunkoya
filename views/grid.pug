extends layout

block content
  h1 Dara Osunkoya
  p rows = #{query.rows} | cols = #{query.cols}

  -
    const rows = Number(query.rows);
    const cols = Number(query.cols);

  if (!Number.isInteger(rows))
    p rows is not an integer
  else if (rows < 3 || rows > 13)
    p rows must be between 3 and 13
  if (!Number.isInteger(cols))
    p cols is not an integer
  else if (cols < 3 || cols > 13)
    p cols must be between 3 and 13
  else
      table#outer.table.table-bordered
        - for (let i = 0; i < rows; i++) {
          tr#middle
            - for (let j = 0; j < cols; j++) {
              td= i + 2 * j
            - }
        - }
